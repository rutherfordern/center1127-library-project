{% extends 'layouts/app.html.twig' %}

{% block title %}Authors{% endblock %}

{% block content %}
    <div class="d-flex align-items-center p-3 my-3 text-white bg-secondary rounded shadow-sm">
        <div class="lh-1">
            <h1 class="h2 mb-0 text-white lh-1">Авторы</h1>
        </div>
    </div>

    <h1>Авторы</h1>
    <a href="{{ path('author_create') }}" class="btn btn-success mb-3">Добавить автора</a>
    <div class="mb-3">
        {% for author in authors %}
            <h2><a href="{{ path('author_show', { 'id': author.id }) }}">{{ author.LastName }}</a></h2>
        {% endfor %}
    </div>
{% endblock %}
